{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
}
